<div class="flex flex-col w-full max-w-screen-xl mx-auto items-center justify-center gap-10 px-6">
    <div class="flex flex-col sm:flex-row w-full h-auto sm:h-[500px] rounded-2xl overflow-hidden bg-transparent">
        <!-- Right: Image (on top for small screens) -->
        <div class="w-full sm:w-[700px] h-[250px] sm:h-full flex items-center justify-center order-1 sm:order-2">
            <img
                alt="<%= alt %>"
                class="object-cover w-full h-full rounded-2xl"
                src="<%= src %>"
            >
        </div>
        <!-- Left: Text Content (below image for small screens) -->
        <div class="flex flex-col justify-center w-full sm:w-[550px] p-6 sm:p-10 space-y-6 order-2 sm:order-1">
            <!-- Title -->
            <div class="max-w-xl">
                <div class="w-full sm:w-[350px] text-white drop-shadow-lg text-5xl font-bold">
                    <%= title %>
                </div>
            </div>
            <!-- Running Text -->
            <div class="w-full sm:w-[420px] text-white text-lg font-medium">
                <%= text %>
            </div>
            <a href="<%= link %>" class="flex items-center justify-center bg-[#ffb347] text-white px-4 py-2 rounded-lg font-semibold shadow hover:bg-orange-200 transition text-center">
                <%= bottone %>
            </a>
        </div>
    </div>
</div>