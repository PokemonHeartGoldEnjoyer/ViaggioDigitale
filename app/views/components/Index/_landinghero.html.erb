<div class="flex flex-col w-full max-w-screen-xl mx-auto items-center justify-center gap-10 px-6">
    <div class="flex flex-row w-full h-[500px] rounded-2xl overflow-hidden bg-transparent">
        <!-- Left: Text Content -->
        <div class="flex flex-col justify-center w-[550px] p-10 space-y-6">
            <!-- Title -->
            <div class="max-w-xl">
                <div class="w-[350px] text-white drop-shadow-lg text-5xl font-bold">
                    <%= title %>
                </div>
            </div>
            <!-- Running Text (now under the other text) -->
            <div class="w-[420px] text-white text-lg font-medium">
                <%= text %>
            </div>
            <a href="<%= link %>" class="flex items-center justify-center bg-[#e17055] text-white px-4 py-2 rounded-lg font-semibold shadow hover:bg-orange-300 transition text-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v12m0 0l-6-6m6 6l6-6M6 20h12"/>
                </svg>
                <%= bottone %>
            </a>
        </div>
        <!-- Right: Image -->
        <div class="w-[700px] h-full flex items-center justify-center">
            <img
                alt="<%= alt %>"
                class="object-cover w-full h-full rounded-2xl"
                src="<%= src %>"
            >
        </div>
    </div>
</div>