<div class="flex items-center justify-center">
    <!-- Card Container with Image Background -->
    <div class="relative rounded-[70px] p-8 shadow-lg w-[800px] h-[600px] flex items-center justify-center" style="background: url('<%= background %>') center center / cover no-repeat;">
        <!-- White overlay with 30% opacity -->
        <div class="absolute inset-0 bg-white opacity-50 rounded-[70px] pointer-events-none"></div>
        <!-- Card Content: Content and Image side by side -->
        <div class="relative z-10 flex flex-row w-full h-full items-center justify-center">
            <!-- Content above overlay with blurred transparent background -->
            <div class="flex-1 flex flex-col items-center justify-center text-center">
                <div class="backdrop-blur-md bg-white/10 rounded-3xl p-8 shadow-md">
                    <div class="font-bold text-5xl text-black mb-3"><%= title %></div>
                    <div class="text-xl font-bold text-black"><%= text %></div>
                </div>
            </div>
            <!-- Gradient Image Section (Right) -->
            <div class="flex-shrink-0 flex items-center justify-center ml-8">
                <div class="w-[350px] h-[350px] rounded-[50px] flex items-center justify-center" style="background: linear-gradient(180deg, #000 0%, #228b5a 60%, #2ee59d 100%);">
                    <img
                        src="<%= src %>"
                        alt="<%= alt %>"
                        class="w-[300px] h-[230px] object-contain"
                    />
                </div>
            </div>
        </div>
    </div>
</div>
