<div id="footer-container">
  <div id="footer" class="flex flex-col pt-5 w-screen" style="background: linear-gradient(to bottom, #2f3085, #515cdf);">
    <footer class="flex flex-col pt-5 w-[1765px] mx-auto">
      <!-- Starter row with 5 columns -->
      <div class="flex flex-col sm:flex-row text-left w-full px-4 sm:px-10 gap-5">
        <!-- Icon and Language Column -->
        <div class="flex flex-col text-center sm:text-start w-full sm:w-1/5 mb-6 sm:mb-0">
        <div class="flex justify-center sm:justify-start mb-4">
          <img src="/images/discordicon.png" alt="Discord Icon" class="w-16 h-16" />
        </div>
        <!-- Language Dropdown -->
        <div class="mb-8">
          <h1 class="text-uppercase font-bold mb-4" style="color: #8b8fc8;">Language</h1>
          <div class="flex items-center mb-4 rounded-2xl relative pl-2 pr-3" style="background-color: #4f54b0;">
            <select class="p-3 rounded-full w-full text-white bg-transparent focus:outline-none" style="background-color: #4f54b0;">
              <option value="en">English</option>
              <option value="it">Italiano</option>
              <option value="fr">Français</option>
              <option value="de">Deutsch</option>
              <option value="es">Español</option>
            </select>
          </div>
        </div>
        <!-- Social icons changed to white -->
        <div class="mt-8">
          <h1 class="text-uppercase font-bold mb-4" style="color: #8b8fc8;">Social</h1>
          <div class="flex flex-row justify-center sm:justify-start font-bold space-x-10 ml-2">
            <a href="#" aria-label="TikTok" class="text-white hover:text-gray-200">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <image href="https://cdn.prod.website-files.com/6257adef93867e50d84d30e2/65a4fe4237b6a1c4fa714f76_x.svg" width="24" height="24"/>
              </svg>
            </a>
            <a href="#" aria-label="Instagram" class="text-white hover:text-pink-200">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5A4.25 4.25 0 0 0 20.5 16.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zm4.25 3.25a5.25 5.25 0 1 1 0 10.5 5.25 5.25 0 0 1 0-10.5zm0 1.5a3.75 3.75 0 1 0 0 7.5 3.75 3.75 0 0 0 0-7.5zm5.25.75a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
              </svg>
            </a>
            <a href="#" aria-label="Facebook" class="text-white hover:text-blue-200">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22 12c0-5.522-4.477-10-10-10S2 6.478 2 12c0 5 3.657 9.127 8.438 9.877v-6.987h-2.54v-2.89h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.242 0-1.63.771-1.63 1.562v1.875h2.773l-.443 2.89h-2.33v6.987C18.343 21.127 22 17 22 12z"/>
              </svg>
            </a>
            <a href="#" aria-label="YouTube" class="text-white hover:text-red-200">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M21.8 8.001s-.2-1.4-.8-2c-.7-.8-1.5-.8-1.9-.9C16.2 5 12 5 12 5h-.1s-4.2 0-7.1.1c-.4.1-1.2.1-1.9.9-.6.6-.8 2-.8 2S2 9.6 2 11.2v1.6c0 1.6.2 3.2.2 3.2s.2 1.4.8 2c.7.8 1.7.8 2.1.9 1.5.1 6.9.1 6.9.1s4.2 0 7.1-.1c.4-.1 1.2-.1 1.9-.9.6-.6.8-2 .8-2s.2-1.6.2-3.2v-1.6c0-1.6-.2-3.2-.2-3.2zM9.8 15.3V8.7l6.4 3.3-6.4 3.3z"/>
              </svg>
            </a>
            <a href="#" aria-label="TikTok" class="text-white hover:text-gray-200">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <image href="https://cdn.prod.website-files.com/6257adef93867e50d84d30e2/65a4fe4152ae5860036dadf1_tiktok.svg" width="24" height="24"/>
              </svg>
            </a>
          </div>
        </div>
        </div>
        <!-- Text Columns -->
        <div class="flex flex-row w-full justify-end gap-2 right-0">
        <!-- Text Column 1 -->
        <div class="flex flex-col sm:w-1/5 text-left items-start  mb-6 sm:mb-0 right-0">
          <div class="mb-4">
            <% footer.each do |feet| %>
              <h5 class="text-uppercase text-white text-sm mb-2 font-bold" style="color: #8b8fc8;"><%= feet[:title] %></h5>
              <p class="text-white text-xs mb-2"><%= feet[:text] %></p>
            <% end %>
          </div>
        </div>
        <!-- Text Column 2 -->
        <div class="flex flex-col sm:w-1/5 text-left items-start  mb-6 sm:mb-0 right-0">
          <div class="mb-4">
            <% footer.each do |feet| %>
              <h5 class="text-uppercase text-white text-sm mb-2 font-bold" style="color: #8b8fc8;"><%= feet[:title1] %></h5>
              <p class="text-white text-xs mb-2"><%= feet[:text1] %></p>
            <% end %>
          </div>
        </div>
        <!-- Text Column 3 -->
        <div class="flex flex-col sm:w-1/5 text-left items-start  mb-6 sm:mb-0 right-0">
          <div class="mb-4">
            <% footer.each do |feet| %>
              <h5 class="text-uppercase text-white text-sm mb-2 font-bold" style="color: #8b8fc8;"><%= feet[:title2] %></h5>
              <p class="text-white text-xs mb-2"><%= feet[:text2] %></p>
            <% end %>
          </div>
        </div>
        <!-- Text Column 4 -->
        <div class="flex flex-col sm:w-1/5 text-left items-start mb-6 sm:mb-0 right-0">
          <div class="mb-4">
            <% footer.each do |feet| %>
              <h5 class="text-uppercase text-white text-sm mb-2 font-bold" style="color: #8b8fc8;"><%= feet[:title3] %></h5>
              <p class="text-white text-xs mb-2"><%= feet[:text3] %></p>
            <% end %>
          </div>
        </div>
        </div>
      </div>
      <!-- Big Image at the Bottom -->
      <div class="w-full flex justify-center items-center mt-8">
        <img src="/images/discordfooterlogo.png" alt="Footer Banner" class="w-screen max-w-screen-xl object-cover" />
      </div>
    </footer>
  </div>
</div>