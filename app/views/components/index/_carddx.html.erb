<div class="flex items-center justify-center ">
    <!-- Card Container with Image Background -->
    <div class="relative flex flex-row items-center rounded-[70px] p-12 shadow-lg w-[800px] h-[600px] bg-cover bg-center" style="background: url('<%= background %>') center center / cover no-repeat;">
        <!-- White overlay with 30% opacity -->
        <div class="absolute inset-0 bg-white opacity-50 rounded-[70px] pointer-events-none"></div>
        <!-- Content and Image Side by Side -->
        <div class="relative z-10 flex flex-row w-full justify-between items-center">
            <!-- Content above overlay with blurred transparent background -->
            <div class="flex flex-col items-center justify-center text-center max-w-[300px] break-words">
                <div class="backdrop-blur-md bg-white/10 rounded-3xl p-5 shadow-md w-full">
                    <div class="font-bold text-5xl text-black mb-3 break-words"><%= title %></div>
                    <div class="text-xl font-bold text-black break-words"><%= text %></div>
                </div>
            </div>
            <!-- Gradient Image Section (Right) -->
            <div class="flex-shrink-0 ml-8 relative z-10">
                <div class="w-[350px] h-[350px] rounded-[50px] flex items-center justify-center" style="background: linear-gradient(180deg, #000 0%, #228b5a 60%, #2ee59d 100%);">
                    <img
                        src="<%= src %>"
                        alt="<%= alt %>"
                        class="w-[300px] h-[230px] object-contain"
                    />
                </div>
            </div>
        </div>
    </div>
</div>
