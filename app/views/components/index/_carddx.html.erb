<div class="flex items-center justify-center ">
    <!-- Card Container with Image Background -->
    <div class="relative flex flex-row items-center rounded-[40px] sm:rounded-[70px] p-4 sm:p-12 shadow-lg w-full max-w-[95vw] sm:w-[800px] sm:h-[600px] h-[400px] bg-cover bg-center" style="background: url('<%= background %>') center center / cover no-repeat;">
        <!-- White overlay with 30% opacity -->
        <div class="absolute inset-0 bg-white opacity-35 rounded-[40px] sm:rounded-[70px] pointer-events-none"></div>
        <!-- Content and Image Side by Side -->
        <div class="relative z-10 flex flex-col sm:flex-row w-full justify-between items-center">
            <!-- Content above overlay with blurred transparent background -->
            <div class="flex flex-col items-center justify-center text-center max-w-[90vw] sm:max-w-[300px] break-words mb-4 sm:mb-0">
                <div class="backdrop-blur-md bg-white/10 rounded-2xl sm:rounded-3xl p-3 sm:p-5 shadow-md w-full">
                    <div class="font-bold text-2xl sm:text-5xl text-black mb-2 sm:mb-3 break-words"><%= title %></div>
                    <div class="text-base sm:text-xl font-bold text-black break-words"><%= text %></div>
                </div>
            </div>
            <!-- Gradient Image Section (Right) -->
            <div class="flex-shrink-0 sm:ml-8 relative z-10">
                <div class="w-[250px] h-[250px] sm:w-[400px] sm:h-[400px] rounded-[40px] sm:rounded-[40px] flex items-center justify-center overflow-hidden">
                    <img
                        src="<%= src %>"
                        alt="<%= alt %>"
                        class="w-full h-full object-cover rounded-[40px] sm:rounded-[40px]"
                    />
                </div>
            </div>
        </div>
    </div>
</div>
